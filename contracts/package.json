    "chai": "^4.3.4",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.4",
    "hardhat": "^2.9.0",
    "hardhat-deploy": "^0.10.5",
    "hardhat-gas-reporter": "^1.0.7",
    "prettier": "^2.5.1",
    "solidity-coverage": "^0.7.18"
  },
  "dependencies": {
    "@ethersproject/bignumber": "^5.5.0",
    "@thirdweb-dev/contracts": "^3",
    "@chainlink/contracts": "^0.5.1",
    "dotenv": "^16.0.0",
    "base64-sol": "^1.1.0",
    "mime": "^3.0.0",
